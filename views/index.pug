doctype html
html
    head
        title= title
        meta(name='viewport',  content='width=device-width, initial-scale=1')
        meta(name='theme-color', content='#24252b')
        link(href='//fonts.googleapis.com/css?family=Roboto', rel="stylesheet")
        link(href='//fonts.googleapis.com/css?family=Ceviche+One', rel="stylesheet")
        link(href='style.css', rel="stylesheet")
    body
        h1= title
        for stream in streams
            video(class="stream", onerror="streamError(this)" autoplay)
                source(src=`broadcaster/${stream}/stream.mp4`, type='video/mp4')
        script(src="ui.js")
